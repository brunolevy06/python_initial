valor_casa = int(input("Qual o valor da casa? "))
salario = int(input("Qual o seu salario? "))
anos = int(input("Em quantos anos pretende pagar? "))

meses = anos * 12
float(prestacao) = valor_casa / meses


if prestacao < (0.3 * salario):
	print("Parabens! Realizaremos o emprestimo pois sua prestacao de %d eh menor do que 30% do seu salario %d" % (prestacao,salario))
else:
	print("Seu emprestimo nao foi aprovado =( ")

